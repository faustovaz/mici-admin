root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,java}]
charset = utf-8

# 4 space indentation
[*.java]
indent_size = 4

# Indentation override for all JS under lib directory
[*{js,html}]
indent_style = space
indent_size = 2